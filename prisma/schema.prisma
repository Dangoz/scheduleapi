// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Persona {
  id          String  @id
  name        String
  nameJP      String?
  lore        String  @default("")
  org         String
  suborg      String?
  twitter     String
  marshmallow String  @default("")

  channel Channel[]

  @@map(name: "persona")
}

model Channel {
  id              String   @id
  uploadId        String
  name            String
  description     String
  platform        String
  photo           String
  banner          String
  publishedAt     DateTime
  updatedAt       DateTime @updatedAt
  subscriberCount Int
  viewCount       Int
  videoCount      Int
  videos          Video[]
  personaId       String
  Persona         Persona  @relation(fields: [personaId], references: [id])

  @@map(name: "channel")
}

model Video {
  id            String    @id
  title         String
  thumbnail     String?
  status        String? // complete, upcoming, live
  liveViewCount Int?
  publishedAt   DateTime?
  scheduledAt   DateTime?
  availableAt   DateTime?
  channelId     String
  Channel       Channel   @relation(fields: [channelId], references: [id])
  updatedAt     DateTime  @updatedAt
  tags          String[]  

  @@map(name: "video")
}
